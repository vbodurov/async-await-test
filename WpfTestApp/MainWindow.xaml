<Window x:Class="WpfTestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox Name="UrlBox" Grid.Row="0" Text="http://localhost:17162/api/async"></TextBox>
        <Button Name="TestBtn" Content="test" Click="ButtonBase_OnClick" Grid.Row="1"></Button>
        <TextBox Name="LogBox" AcceptsReturn="True" AcceptsTab="True" Grid.Row="2"></TextBox>
    </Grid>
</Window>
